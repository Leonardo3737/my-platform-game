{
  "name": "mario",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:frontend": "tsc -p tsconfig.f.json && tsc-alias -p tsconfig.f.json",
    "build:backend": "tsc -p tsconfig.b.json",
    "build": "yarn build:frontend && yarn build:backend",
    "start": "node dist/backend/server.js",
    "dev": "tsc -p tsconfig.f.json && tsc-alias -p tsconfig.f.json && ts-node-dev --project tsconfig.b.json src/backend/server.ts"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}

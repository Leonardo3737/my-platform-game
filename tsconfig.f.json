{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./public/js",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src/frontend", "src/core"],
  "exclude": ["src/backend"]
}
